@model IEnumerable<IT431Site.Models.Location>

@{
    ViewBag.Title = "All Locations";
}

<div class="main">
    <div class="container">
        <div class="body-content">
            <h2>All Locations</h2>

            <p>
                @Html.ActionLink("Create New", "Create")
            </p>

            <div class="row is-flex">
                @foreach (var item in Model)
                {
                    @Html.Partial("_LocationsDisplayView", item)
                }
            </div>



            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DateOpen)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateClosed)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LocationName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LocationDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LocationType)
                    </th>
                    <th>
                        @Html.DisplayName("Benefits Added?")
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LocationImg)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateOpen)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateClosed)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LocationName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LocationDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LocationType)
                        </td>
                        <td>
                            @if(item.BenefitsAdded == true || item.BreakfastAdded == true || item.GymAdded == true || item.HousekeepingAdded == true)
                            {
                                @Html.DisplayName("Yes")
                            }
                            else
                            {
                                @Html.DisplayName("No")
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LocationImg)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
